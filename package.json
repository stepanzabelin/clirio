{
  "name": "clirio",
  "version": "2.0.0-dev.1",
  "description": "Clirio is a mini framework for node.js command-line interfaces",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/stepanzabelin/clirio",
  "license": "MIT",
  "keywords": [
    "cli",
    "console",
    "command",
    "option",
    "parser",
    "argument",
    "args",
    "argv",
    "terminal",
    "shell",
    "interface"
  ],
  "author": "Stepan Zabelin",
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.main.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "tsc -p tsconfig.json -w",
    "fix:prettier": "prettier --write \"./{src,tests,test-cli-app}/**/*.ts\"",
    "fix:eslint": "eslint \"./src/**/*.ts\" \"./tests/**/*.ts\"  \"./test-cli-app/**/*.ts\" -c .eslintrc-final.json --fix",
    "fix": "run-s fix:*",
    "test:eslint": "eslint \"./src/**/*.ts\" \"./tests/**/*.ts\"  \"./test-cli-app/**/*.ts\" --quiet -c .eslintrc-final.json",
    "test:typescript": "tsc -p tsconfig.json --noEmit",
    "test:cspell": "cspell \"./{src,test-cli-app}/**/*.ts\" --no-progress",
    "test:unit": "jest --silent=false --bail",
    "test": "run-s build test:*",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky install",
    "dev": "ts-node -r tsconfig-paths/register test-cli-app/run"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "cspell": "^6.31.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^3.0.0",
    "sinon": "^12.0.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.5.4"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}